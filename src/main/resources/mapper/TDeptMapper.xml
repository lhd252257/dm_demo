<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.pig4cloud.pigx.generator.mapper.TDeptMapper">

	<resultMap id="tDeptMap"
		type="com.pig4cloud.pigx.generator.entity.TDept">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="remarks" column="remarks" />
		<result property="parentId" column="parent_id" />
		<result property="inFaceMachineIp" column="in_face_machine_ip" />
		<result property="outFaceMachineIp"
			column="out_face_machine_ip" />
		<result property="counter" column="counter" />
	</resultMap>

	<select id="getInFaceMachineIPByUserDeptId">
		SELECT
			dept.in_face_machine_ip 
		FROM
			t_dept AS dept,
			t_reg_face_user AS fuser 
		WHERE
			fuser.dept_id = dept.id
		AND
			fuser.id = ${userid}
	</select>
</mapper>
